<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.ac.univie.hci.typo">

    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />

    <application
        android:name=".Controller.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/typo_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".Controller.ActivityManagement.ActivityRecognizedService" />
        <service android:name=".Controller.ActivityManagement.BackgroundActivityService" />

        <activity
            android:name=".View.GameActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".View.ScoresActivity" />
        <activity android:name=".View.StatisticsActivity" />
        <activity android:name=".View.AfterGameActivity" />
        <activity android:name=".View.TransportAskingActivity" />
        <activity android:name=".View.AboutActivity"></activity>
        <activity android:name=".preferences"></activity>
    </application>

</manifest>