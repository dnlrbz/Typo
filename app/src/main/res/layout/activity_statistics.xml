<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.StatisticsActivity">


    <TextView
        android:id="@+id/textViewHead"
        android:layout_width="wrap_content"
        android:layout_height="119dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingBottom="5dp"
        android:paddingTop="0dp"
        android:textAlignment="center"
        android:textColor="@color/menuButtonColor"
        android:textSize="45sp"
        android:textStyle="bold" />

    <ImageButton
        android:contentDescription="@string/content_description_back_button"
        android:id="@+id/buttonBack"
        android:layout_width="57dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:onClick="openScoresActivity"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        app:srcCompat="@drawable/back_filled" />

    <ListView
        android:id="@+id/listViewStats"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:divider="@android:color/black"
        android:dividerHeight="2dp"/>

    <TextView
        android:id="@+id/textViewHintdelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listViewStats"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/choose_item_to_delete_or_press_back"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp" />

</RelativeLayout>