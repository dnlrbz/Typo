<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.AfterGameActivity">

    <EditText
        android:id="@+id/editTextNameOfPlayer"
        android:layout_width="237dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="103dp"
        android:cursorVisible="false"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="5sp"
        android:textStyle="bold"
        tools:cursorVisible="true" />

    <TextView
        android:id="@+id/textViewGame2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingBottom="5dp"
        android:paddingTop="0dp"
        android:text="YOUR NAME"
        android:textAlignment="center"
        android:textColor="@color/menuButtonColor"
        android:textSize="45sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="sans-serif-smallcaps"
        android:text="SAVE"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textViewHint"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_above="@+id/_namesList"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="262dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="or select"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/_namesList"
        android:layout_width="272dp"
        android:layout_height="333dp"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/textViewGame2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="292dp" />
</RelativeLayout>